import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>404 - Page Not Found | 25CollectiveCo</title>
  <meta name="description" content="The page you're looking for doesn't exist." />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="robots" content="noindex, nofollow" />
</head>
<body>
  <div class="blog-post">
    <header class="blog-post-header" style="text-align: center;">
      <h1>404</h1>
      <p>Page Not Found</p>
    </header>

    <div class="content" style="text-align: center; max-width: 600px; margin: 0 auto;">
      <p>The page you're looking for doesn't exist or has been moved.</p>
      <p style="margin-top: 2rem;">
        <a href="/">Return to Home</a> or <a href="/blog">Browse Blog</a>
      </p>
    </div>
  </div>
</body>
</html>
